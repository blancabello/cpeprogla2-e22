#include<iostream>
#include<cstring>
#include<iomanip>
using namespace std;

struct Student{
	
	char name[20];
	char *remark;
	int id;
	double grade1;
	double grade2;
	double grade3;
	double average;
	
};

int main(){
	
	int x;
	Student stud[4];
	
	cout<<"Enter 5 Student(s)"<<endl<<endl;
	
	for(x=0;x<5;x++){
		
		cout<<"Student "<<x+1<<endl;
		cout<<	"ID: ";
		cin>>stud[x].id;
		cin.clear();
		cin.ignore();
		cout<<"Name: ";
		cin.getline(stud[x].name,20);
	
		cout<<"Enter 3 quizzes: ";
		cin>>stud[x].grade1>>stud[x].grade2>>stud[x].grade3;
		cout<<endl;
	
		stud[x].average = (stud[x].grade1+stud[x].grade2+stud[x].grade3)/3;
	
	
		if(stud[x].average>=75){
			stud[x].remark = "Passed";
	
		}	
		else
			stud[x].remark= "Failed";
	}
	cout<<setw(5)<<"No."<<setw(15)<<"Student No."<<setw(20)<<"Name"<<setw(10)<<"Grade"<<setw(15)<<"Remark"<<endl;
	
	for(x=0;x<5;x++){
		
		cout<<setprecision(2)<<fixed;
		cout<<setw(5)<<x+1<<setw(15)<<stud[x].id<<setw(20)<<stud[x].name<<setw(10)<<stud[x].average<<setw(15)<<stud[x].remark<<endl;
					
	}
}
